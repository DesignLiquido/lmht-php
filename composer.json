{
    "name": "designliquido/lmht-php",
    "description": "Biblioteca LMHT para PHP. Transforma arquivos LMHT em HTML.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DesignLiquido\\Lmht\\": "src/"
        }
    },
    "authors": [{
        "name": "wallacemaxters",
        "email": "wallacemaxters@gmail.com"
    }],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4 | ^8.0",
        "civicrm/composer-downloads-plugin": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true
        }
    },
    "extra": {
        "downloads" : {
            "especificacao" : {
                "url" : "https://github.com/DesignLiquido/LMHT/archive/refs/heads/principal.zip",
                "path" : "especificacao"
            }
        }
    }
}
